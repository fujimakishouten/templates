{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "charset": "utf8",
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "./dest",
        "preserveConstEnums": true,
        "pretty": true,
        "removeComments": false,
        "rootDir": "./src",
        "sourceMap": false
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"]

}

