{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "baseUrl": "./",
        "charset": "utf8",
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "./dest",
        "preserveConstEnums": true,
        "pretty": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "ES2017"
    },
    "exclude": ["bower_components", "jspm_packages", "node_modules", "./dest"], 
    "include": ["./src/**/*"]
}

